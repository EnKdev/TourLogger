<Window x:Class="TourLogger.Windows.NewAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourLogger.Windows"
        mc:Ignorable="d"
        Title="TourLogger - Create New Account" Height="253" Width="450" FontFamily="Bahnschrift" FontSize="18" ResizeMode="NoResize">
    <Grid>
        <Label Name="label1" Content="No account was detected." VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Name="label2" Content="Please create a new account before proceeding." VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0, 25, 0, 0" />
        <StackPanel Orientation="Vertical" Margin="0, 50, 0, 0">
            <Label Name="label3" Content="Driver Name: " />
            <TextBox Name="tb_Name" Width="150" HorizontalAlignment="Left"/>
            <Label Name="label4" Content="Truck: " />
            <TextBox Name="tb_Truck" Width="150" HorizontalAlignment="Left" />
        </StackPanel>
        <Button Name="bt_Submit" Content="Submit" Click="Bt_Submit_OnClick" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,180,0,0"></Button>
        <Image HorizontalAlignment="Left" Height="100" Margin="-133,206,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
