<Window x:Class="TourLogger.Mvvm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourLogger.Mvvm"
        xmlns:util="clr-namespace:TourLogger.Mvvm.Util"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="525" Width="1025" Icon="/Icons/Icon.ico">
    <Window.Resources>
        <util:TemplateSelector x:Key="ViewTemplateSelector"/>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding CurrentView}"
                        ContentTemplateSelector="{StaticResource ViewTemplateSelector}"/>
    </Grid>
</Window>
